<h1>Listing travelers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Country</th>
      <th>State</th>
      <th>City</th>
      <th>Duration of travel</th>
      <th>Origin</th>
      <th>Destination</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @travelers.each do |traveler| %>
      <tr>
        <td><%= traveler.name %></td>
        <td><%= traveler.age %></td>
        <td><%= traveler.country %></td>
        <td><%= traveler.state %></td>
        <td><%= traveler.city %></td>
        <td><%= traveler.duration_of_travel %></td>
        <td><%= traveler.origin %></td>
        <td><%= traveler.destination %></td>
        <td><%= link_to 'Show', traveler %></td>
        <td><%= link_to 'Edit', edit_traveler_path(traveler) %></td>
        <td><%= link_to 'Destroy', traveler, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

